<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" styleClass="shadowed" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hypersocket.client.gui.jfx.SignIn">
   <children>
      <VBox fx:id="root" alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="340.0" styleClass="windowContent">
         <children>
            <Label text="%serverURL">
               <padding>
                  <Insets bottom="8.0" />
               </padding>
            </Label>
            <ScrollPane prefHeight="175.0">
              <content>
                <AnchorPane minHeight="175.0" minWidth="0.0" >
                     <children>
            			<VBox fx:id="connections" />
            		 </children>
                  </AnchorPane>
              </content>
            </ScrollPane>
            <VBox fx:id="container" maxHeight="999.0" VBox.vgrow="ALWAYS">
               <children>
                  <HBox fx:id="progressUI" alignment="CENTER" maxHeight="999.0" styleClass="progressUI" VBox.vgrow="ALWAYS">
                     <children>
                        <ProgressIndicator fx:id="spinner" HBox.hgrow="NEVER" />
                     </children>
                     <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </padding>
                  </HBox>
                  <BorderPane fx:id="promptUI" VBox.vgrow="NEVER">
                     <left>
                        <Button fx:id="login" mnemonicParsing="false" onAction="#evtLogin" styleClass="uiButton" text="%login" BorderPane.alignment="CENTER" />
                     </left>
                     <styleClass>
                        <String fx:value="background" />
                        <String fx:value="promptUI" />
                     </styleClass>
                     <VBox.margin>
                        <Insets top="8.0" />
                     </VBox.margin>
                  </BorderPane>
                  <BorderPane fx:id="credentialsUI" VBox.vgrow="SOMETIMES" />
               </children>
               <padding>
                  <Insets top="8.0" />
               </padding>
            </VBox>
            <BorderPane fx:id="addConnectionUI" VBox.vgrow="SOMETIMES" >
          		<right>
                	<Button fx:id="addConnection" mnemonicParsing="false" onAction="#evtAddConnection" styleClass="uiButton" text="%addConnection" BorderPane.alignment="CENTER" />
             	</right>
          	</BorderPane>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </VBox>
   </children>
</StackPane>
