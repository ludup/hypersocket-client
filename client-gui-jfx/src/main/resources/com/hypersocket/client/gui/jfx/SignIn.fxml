<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="connectionsStackPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" styleClass="shadowed" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hypersocket.client.gui.jfx.SignIn">
   <children>
      <VBox fx:id="root" alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="310.0" styleClass="windowContent">
         <children>
         	<BorderPane fx:id="addConnectionUI" VBox.vgrow="SOMETIMES">
          		<right>
                	<Button fx:id="addConnection" mnemonicParsing="false" onAction="#evtAddConnection" styleClass="iconButton, add-connection" text="%addConnection.icon" BorderPane.alignment="CENTER" />
             	</right>
             	<left>
             		<HBox fx:id="progressUI">
                     <children>
                        <ProgressIndicator fx:id="spinner" styleClass="busy" prefHeight="16" prefWidth="20" HBox.hgrow="NEVER" />
                     </children>
                  </HBox>
             	</left>
          	</BorderPane>
          	<VBox fx:id="container" maxHeight="999.0" VBox.vgrow="ALWAYS">
               <children>
                  <BorderPane fx:id="promptUI" VBox.vgrow="NEVER">
                     <left>
                        <Button fx:id="login" mnemonicParsing="false" onAction="#evtLogin" styleClass="uiButton" text="%login" BorderPane.alignment="CENTER" />
                     </left>
                     <styleClass>
                        <String fx:value="background" />
                        <String fx:value="promptUI" />
                     </styleClass>
                     <VBox.margin>
                        <Insets top="8.0" />
                     </VBox.margin>
                  </BorderPane>
                  <BorderPane fx:id="credentialsUI" VBox.vgrow="SOMETIMES" />
               </children>
            </VBox>
            <ScrollPane fx:id="connectionsScroll" minHeight="20" maxHeight="300" styleClass="transparent-background" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER">
              <content>
                <AnchorPane fx:id="connectionsAnchor" minHeight="20.0" styleClass="no-border">
                     <children>
            			<VBox fx:id="connections"  styleClass="no-border"/>
            			<Label fx:id="connectionsMessage" text="%no.con" styleClass="info-lg" textOverrun="CLIP" />
            		 </children>
                  </AnchorPane>
              </content>
              <padding>
            		<Insets bottom="8.0" left="8.0" right="8.0" top="2.0" />
         	  </padding>
            </ScrollPane>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </VBox>
   </children>
</StackPane>
