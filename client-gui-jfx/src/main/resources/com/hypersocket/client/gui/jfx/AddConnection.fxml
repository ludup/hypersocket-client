<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.textfield.*?>

<StackPane fx:id="addConnectionStackPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hypersocket.client.gui.jfx.AddConnection">
   <children>
   		<VBox alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="380" styleClass="windowContent">
   			<children>
   				<BorderPane>
                	<left>
                		<HBox VBox.vgrow="ALWAYS">
	                     <children>
	                     	<Button mnemonicParsing="false" styleClass="uiButton, iconButton" text="%connect.icon" />
                    	 	<Label styleClass="title, info-lg" text="%title" textOverrun="CLIP">
                        	</Label>
                        </children>
                        <styleClass>
      						<String fx:value="group" />
   						</styleClass>
   						<padding>
                        	<Insets bottom="7.0" left="4.0" right="4.0" top="4.0" />
                        </padding>
                       </HBox>
                    </left>
                </BorderPane>
                <BorderPane>
                	<center>
                		<Label fx:id="messageLbl">
			               <padding>
			                  <Insets bottom="8.0" left="10.0"/>
			               </padding>
			            </Label>
                    </center>
                </BorderPane>
   				<BorderPane>
                	<left>
                    	 <Label alignment="CENTER" styleClass="info-lg" text="%name" textOverrun="CLIP">
                           <padding>
                              <Insets bottom="12.0" left="0" right="4.0" top="4.0" />
                           </padding>
                        </Label>
                    </left>
                    <right>
                    	<CustomTextField fx:id="nameInput" BorderPane.alignment="CENTER" styleClass="element-padding" minWidth="250"/>
                    </right>
                </BorderPane>
                <BorderPane>
                	<left>
                    	 <Label alignment="CENTER" styleClass="info-lg" text="%server" textOverrun="CLIP">
                           <padding>
                              <Insets bottom="12.0" left="0" right="4.0" top="4.0" />
                           </padding>
                        </Label>
                    </left>
                    <right>
                    	<CustomTextField fx:id="serverInput" BorderPane.alignment="CENTER" styleClass="element-padding" minWidth="250"/>
                    </right>
                </BorderPane>
				<BorderPane>
                	<left>
                    	 <Label fx:id="usernameLbl" alignment="CENTER" styleClass="info-lg" text="%username" textOverrun="CLIP">
                           <padding>
                              <Insets bottom="12.0" left="0" right="4.0" top="4.0" />
                           </padding>
                        </Label>
                    </left>
                    <right>
                    	<CustomTextField fx:id="usernameInput" BorderPane.alignment="CENTER" styleClass="element-padding" minWidth="250"/>
                    </right>
                </BorderPane>
                <BorderPane>
                	<left>
                    	 <Label fx:id="passwordLbl" alignment="CENTER" styleClass="info-lg" text="%password" textOverrun="CLIP">
                           <padding>
                              <Insets bottom="12.0" left="0" right="4.0" top="4.0" />
                           </padding>
                        </Label>
                    </left>
                    <right>
                    	<CustomPasswordField fx:id="passwordInput" BorderPane.alignment="CENTER" styleClass="element-padding" minWidth="250"/>
                    </right>
                </BorderPane>
                <BorderPane>
                    <right>
                    	<HBox VBox.vgrow="ALWAYS">
	                     <children>
	                     	<Label alignment="CENTER" styleClass="info" text="%saveCred" textOverrun="CLIP">
                           <padding>
                              <Insets bottom="12.0" left="4.0" right="4.0" top="4.0" />
                           </padding>
                        </Label>
	                        <CheckBox fx:id="saveCredsCBox" onAction="#evtSaveCred"  mnemonicParsing="false" />
	                     </children>
	                     <padding>
	                        <Insets bottom="3.0" left="8.0" right="0" top="3.0" />
	                     </padding>
	                  </HBox>
                    </right>
                </BorderPane>
                <BorderPane>
                    <right>
                    	<HBox VBox.vgrow="ALWAYS">
	                     <children>
	                     	<Label alignment="CENTER" styleClass="info" text="%conOnstart" textOverrun="CLIP">
                           <padding>
                              <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                           </padding>
                        </Label>
	                        <CheckBox fx:id="conOnstartCBox" onAction="#evtConOnstart" mnemonicParsing="false" />
	                     </children>
	                     <padding>
	                        <Insets bottom="3.0" left="8.0" right="0" top="3.0" />
	                     </padding>
	                  </HBox>
                    </right>
                </BorderPane>   
                <BorderPane>
                	<left>
                		<Label text="%required.msg" styleClass="info, italics">
			               <padding>
			                  <Insets bottom="10.0" left="4.0" top="10.0"/>
			               </padding>
			            </Label>
                	</left>
                    <right>
                    	<HBox>
	                     <children>
	                     	<Button fx:id="cancel" mnemonicParsing="false" onAction="#evtCancel" text="%cancel" />
	                       	<Button fx:id="add" mnemonicParsing="false" onAction="#evtAdd" text="%add" />
	                       	<Button fx:id="edit" mnemonicParsing="false" onAction="#evtEdit" text="%update" />
	                     </children>
	                     <padding>
	                        <Insets bottom="8.0" left="8.0" right="5.0" top="8.0" />
	                     </padding>
	                     <spacing>
	                        <Double fx:value="15" />
	                     </spacing>
	                  </HBox>
                    </right>
                </BorderPane>
   			</children>
   			<padding>
	        	<Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
	        </padding>
   		</VBox>	
   </children>
   <styleClass>
      <String fx:value="background" />
   </styleClass>
</StackPane>